    <%- include('partials/header');%>

<body>
    <div class="navbar navbar-light bg-primary">
        <img src="/img/guia.png" alt="Imagem do Guia do Programador">
    </div>

    <div class="container">
        <hr>
        <h2><%= pergunta.titulo%></h2>
        <p><%= pergunta.descricao%></p>
        <hr>
        <form method="POST" action="/responder">
            <h3>Responda</h3>
            <label for="">Resposta:</label>
            <textarea placeholder="Digite sua resposta..." class="form-control" name="corpo" cols="30" rows="7"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id%>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>  
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo%>
                </div>
            </div>
        <% })%>



    </div>
</body>

    <%- include('partials/footer');%>